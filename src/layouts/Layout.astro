---
import "../styles/global.css";
import LogoutButton from "@/components/LogoutButton";
import { isFeatureEnabled } from "@/features/flags";

interface Props {
  title?: string;
}

const { title = "10x Astro Starter" } = Astro.props;

// Get user from context.locals (set by middleware)
const user = Astro.locals.user;

// Check if auth feature is enabled
const isAuthEnabled = isFeatureEnabled("auth");
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <!-- Header with navigation -->
    <header class="border-b bg-background">
      <div class="container mx-auto flex h-16 items-center justify-between px-4">
        <!-- Logo/Brand -->
        <a href="/" class="text-xl font-bold hover:text-primary transition-colors"> BP Tracker </a>

        <!-- Navigation -->
        <nav class="flex items-center gap-4">
          {
            user ? (
              <>
                {/* Logged in navigation */}
                <a
                  href="/measurements"
                  class="text-sm font-medium text-muted-foreground hover:text-foreground transition-colors"
                >
                  Pomiary
                </a>
                <a
                  href="/profile"
                  class="text-sm font-medium text-muted-foreground hover:text-foreground transition-colors"
                >
                  Profil
                </a>
                {isAuthEnabled && <LogoutButton client:load />}
              </>
            ) : (
              <>
                {/* Logged out navigation */}
                {isAuthEnabled && (
                  <a
                    href="/login"
                    class="text-sm font-medium text-muted-foreground hover:text-foreground transition-colors"
                  >
                    Zaloguj siÄ™
                  </a>
                )}
              </>
            )
          }
        </nav>
      </div>
    </header>

    <!-- Main content -->
    <main>
      <slot />
    </main>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
